<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwtbootstrap="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:gwtbootstrap3="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.panel {
		width: 96%;
		background: #f5f5f5;
		margin: 10px 2% 10px 2%;
		border: 1px solid #5bc0de;
		background-color: white;
		border-radius: 6px;
		padding: 0px 0 0px 4px;
	}
	
	.sentence {
		width: 100%;
		float: left;
	}
	
	.rb {
		width: 100% !important;
	}
	</ui:style>
	<g:FlowPanel addStyleNames="{style.panel}">
		<g:HorizontalPanel>
			<g:FlowPanel addStyleNames="{style.rb}">
				<gwtbootstrap:CheckBox ui:field="rb"></gwtbootstrap:CheckBox>
			</g:FlowPanel>

		</g:HorizontalPanel>
	</g:FlowPanel>

</ui:UiBinder> 